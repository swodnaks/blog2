<%= form_for @post do |f| %>
 <% if @post.errors.any? %>
  <div id="errors">
  <h2><%= pluralize(@post.errors.count, "error") %>prevented this post
  from saving</h2>
  <ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  </div>
<% end %>
 <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
  <%= f.label :tags %><br>



  <div class="col-sm-10">

   <%= f.collection_select :tag_ids, @post.tags, :id, :title, {}, multiple: true,
   class: 'js-multiple-select js-ajax-select w-100', data: {'ajax-url': '/api/tags'} %>

  </div>
</div>




</p>

  <p>
  <%= f.submit %>
  </p>
  <% end %>
